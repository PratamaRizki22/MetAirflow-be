# Database
DATABASE_URL="postgresql://username:password@localhost:5432/rentverse?schema=public"

# Server
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# API
API_VERSION=v1

# ==============================================
# AWS / MinIO S3 Storage
# ==============================================
AWS_ACCESS_KEY_ID=your_minio_access_key
AWS_SECRET_ACCESS_KEY=your_minio_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=rentverse-uploads
AWS_URL=https://s3.yourdomain.com
AWS_USE_PATH_STYLE_ENDPOINT=true
AWS_ENDPOINT=https://s3.yourdomain.com

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/webp
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp,application/pdf

# OAuth Settings
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Apple OAuth
APPLE_TEAM_ID=your_apple_team_id_here
APPLE_KEY_ID=your_apple_key_id_here
APPLE_PRIVATE_KEY=your_apple_private_key_here
APPLE_CLIENT_ID=your_apple_client_id_here

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Twitter OAuth
TWITTER_CONSUMER_KEY=your_twitter_consumer_key_here
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret_here

# OAuth Callback URLs
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,http://localhost:5174,http://127.0.0.1:3000,http://127.0.0.1:3001,http://127.0.0.1:5173,http://127.0.0.1:5174

# Session Settings (for OAuth)
SESSION_SECRET=your_session_secret_here_change_in_production

