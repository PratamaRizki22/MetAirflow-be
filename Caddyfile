# Global options
{
    # Email for Let's Encrypt (uncomment for production with domain)
    # email your-email@example.com
    
    # Admin API (disabled for security)
    admin off
    
    # Logging
    log {
        output stdout
        format json
        level INFO
    }
}

# Main server block
# Replace with your domain in production
:80 {
    # Or use your domain: yourdomain.com {
    
    # Logging
    log {
        output stdout
        format json {
            time_format iso8601
        }
    }
    
    # Security headers
    header {
        # Enable HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        
        # Prevent MIME sniffing
        X-Content-Type-Options "nosniff"
        
        # XSS Protection
        X-XSS-Protection "1; mode=block"
        
        # Referrer Policy
        Referrer-Policy "strict-origin-when-cross-origin"
        
        # Remove Server header
        -Server
        
        # Permissions Policy
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        
        # Content Security Policy (adjust based on your needs)
        # Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"
    }
    
    # Rate limiting (optional)
    # rate_limit {
    #     zone dynamic {
    #         key {remote_host}
    #         events 100
    #         window 1m
    #     }
    # }
    
    # Compression
    encode {
        gzip 6
        zstd
        minimum_length 1024
    }
    
    # Health check endpoint (bypass proxy for quick response)
    handle /health {
        reverse_proxy app:3000 {
            health_uri /health
            health_interval 30s
            health_timeout 10s
        }
    }
    
    # API Documentation
    handle /docs* {
        reverse_proxy app:3000 {
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
        }
    }
    
    # Static file caching for uploads
    handle /uploads/* {
        reverse_proxy app:3000 {
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
        
        # Cache static files
        header Cache-Control "public, max-age=31536000, immutable"
    }
    
    # API routes
    handle /api/* {
        reverse_proxy app:3000 {
            # Proxy headers
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
            
            # Timeouts
            transport http {
                dial_timeout 10s
                response_header_timeout 30s
                read_timeout 60s
                write_timeout 60s
            }
            
            # Load balancing (if you have multiple instances)
            # lb_policy random
            
            # Health check
            health_uri /health
            health_interval 30s
            health_timeout 10s
        }
        
        # No cache for API responses
        header Cache-Control "no-cache, no-store, must-revalidate"
    }
    
    # OAuth callbacks
    handle /auth/* {
        reverse_proxy app:3000 {
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
        }
    }
    
    # Default handler for all other routes
    handle {
        reverse_proxy app:3000 {
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
        }
    }
    
    # Custom error pages (optional)
    handle_errors {
        @502-504 expression `{err.status_code} in [502, 503, 504]`
        handle @502-504 {
            respond "Service temporarily unavailable" 503
        }
        
        respond "{err.status_code} {err.status_text}"
    }
}
